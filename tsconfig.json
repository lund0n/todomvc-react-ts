{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "filesGlob": [
    "typings/index.d.ts",
    "js/**/*.ts",
    "js/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "tests"
  ],
  "atom": {
    "rewriteTsconfig": true,
    "formatOnSave": true
  },
  "files": [
    "typings/index.d.ts",
    "js/constants.ts",
    "js/externals.d.ts",
    "js/todoModel.ts",
    "js/utils.ts",
    "js/app.tsx",
    "js/footer.test.tsx",
    "js/footer.tsx",
    "js/todoItem.test.tsx",
    "js/todoItem.tsx"
  ]
}
